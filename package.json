{
  "name": "@ramboz/helix-project-boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "Starter project for Adobe Franklin",
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint blocks/**/*.css styles/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "franklin:plugin:add": "git remote add -f \"plugins/$npm_config_name\" \"$npm_config_url\" && git subtree add --squash --prefix \"plugins/$npm_config_name\" \"plugins/$npm_config_name\" main",
    "franklin:plugin:update": "git fetch \"plugins/$npm_config_name\" main && git subtree pull --squash --prefix \"plugins/$npm_config_name\" \"plugins/$npm_config_name\" main",
    "franklin:plugin:remove": "git remote remove \"plugins/$npm_config_name\" && rimraf \"plugins/$npm_config_name\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramboz/helix-project-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/ramboz/helix-project-boilerplate/issues"
  },
  "homepage": "https://github.com/ramboz/helix-project-boilerplate#readme",
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "semantic-release": "21.0.5",
    "@babel/core": "7.21.0",
    "@babel/eslint-parser": "7.19.1",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@web/test-runner": "0.15.1",
    "@web/test-runner-commands": "0.6.5",
    "chai": "4.3.7",
    "eslint": "8.35.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.27.5",
    "rimraf": "3.0.2",
    "sinon": "15.0.1",
    "stylelint": "15.2.0",
    "stylelint-config-standard": "30.0.1"
  }
}
